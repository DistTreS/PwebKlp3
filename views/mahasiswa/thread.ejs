<%- include("../layout/sidebar.ejs") %>

<body class="bg-gray-100 p-6">
    <div class="bg-white p-6 rounded shadow-md">
        <div class="ml-64 p-4">
        <h1 class="text-2xl font-bold mb-4"><%= thread.title %></h1>
        <p class="text-gray-600 mb-4">Created by <%= thread.user.username %> on <%= thread.created_at %></p>
        <ul class="mb-4">
            <% posts.forEach(post => { %>
                <li class="border-b mb-2 pb-2">
                    <p><%= post.content %></p>
                    <p class="text-gray-600 text-sm">Posted by <%= post.user.username %> on <%= post.created_at %></p>
                </li>
            <% }) %>
        </ul>
        <form action="/mahasiswa/thread/<%= thread.thread_id %>/post" method="post" class="mb-4">
            <textarea name="content" placeholder="Write your post here" class="border p-2 rounded w-full mb-2"></textarea>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Post</button>
        </form>
        <a href="/mahasiswa/forum" class="mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Back to Forum</a>
        </div>
    </div>
</body>
</html>
